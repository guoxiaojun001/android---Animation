<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:anumbrella="http://schemas.android.com/apk/res/com.example.circulardemo"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.example.circulardemo.RoundImageView
            android:id="@+id/check1"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_margin="10dip"
            android:scaleType="centerCrop"
            android:src="@drawable/image1" >
        </com.example.circulardemo.RoundImageView>

        <com.example.circulardemo.RoundImageView
            android:id="@+id/check2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:scaleType="centerCrop"
            android:src="@drawable/image1" >
        </com.example.circulardemo.RoundImageView>

        <com.example.circulardemo.RoundImageView
            android:id="@+id/check3"
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:layout_margin="10dip"
            android:scaleType="centerCrop"
            android:src="@drawable/image2" >
        </com.example.circulardemo.RoundImageView>

        <com.example.circulardemo.RoundImageView
            android:id="@+id/check4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:scaleType="centerCrop"
            android:src="@drawable/image2" >
        </com.example.circulardemo.RoundImageView>

        <com.example.circulardemo.RoundImageView
            android:id="@+id/check5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:scaleType="centerCrop"
            android:src="@drawable/image2"
            anumbrella:borderRadius="200dip"
            anumbrella:type="round" >
        </com.example.circulardemo.RoundImageView>

        <com.example.circulardemo.RoundImageView
            android:id="@+id/check6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:scaleType="centerCrop"
            android:src="@drawable/image4"
            anumbrella:borderRadius="100dip"
            anumbrella:type="round" >
        </com.example.circulardemo.RoundImageView>

        <com.example.circulardemo.RoundImageView
            android:id="@+id/check7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:scaleType="centerCrop"
            android:src="@drawable/image4"
            anumbrella:borderRadius="100dip"
            anumbrella:type="circle" >
        </com.example.circulardemo.RoundImageView>
    </LinearLayout>

</ScrollView>